<div class="row">
  <div class="col">
    <h2>Filtering draggable objects</h2>
    <hr>
  </div>
</div>
<div class="row">
  <div class="col">
    <SortableJs
      class="pretty-list"
      @options={{hash
        animation=150
        swapThreshold=this.rangeValue
        draggable=".item"
      }}
      as |sortable|
    >
      <div class="item" data-testid="one">
        {{! template-lint-disable no-inline-styles }}
        {{! template-lint-disable style-concatenation }}
        <div class="threshold-indicator" style="height: {{this.thresholdHeight}}%">Item 1</div>
      </div>
      <div class="item" data-testid="one">
        {{! template-lint-disable no-inline-styles }}
        {{! template-lint-disable style-concatenation }}
        <div class="threshold-indicator" style="height: {{this.thresholdHeight}}%">Item 2</div>
      </div>
      <div class="threshold">
        Threshold:&nbsp;<input type="range" min="0" max="1" step="0.01" value={{this.rangeValue}} {{on "input" (fn this.setRange sortable)}}>
      </div>
    </SortableJs>
  </div>
  <div class="col">
    <pre>
      <code>
        &lt;SortableJs
          class="pretty-list"
          @options=&#123;&#123;hash animation=150 swapThreshold={{this.rangeValue}}&#125;&#125;
        &gt;
          &lt;div class="list-group-item"&gt;&lt;/span&gt;Item 1&lt;/div&gt;
        &lt;/SortableJs&gt;
      </code>
    </pre>
  </div>
</div>
